= form_with model: [ @article, @article.comments.build ] do |form|
    p
      div
        = form.label :commenter
      div
        = form.text_field :commenter
    p
      div
        = form.label :body
      div
        = form.text_area :body
    p
      div
        = form.label :status
      div
        = form.select :status, Comment::VALID_STATUSES, selected: 'public'
    p
      = form.submit
